{
  "dashboard": {
    "id": null,
    "title": "MQTT Data Dashboard",
    "description": "Dashboard per visualizzare i dati MQTT salvati in TimescaleDB",
    "tags": ["mqtt", "timescaledb", "digitaltwin"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "panels": [
      {
        "id": 1,
        "title": "Messaggi MQTT nel tempo",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "",
            "format": "time_series",
            "intervalFactor": 1,
            "rawSql": "SELECT time AS \"time\", topic, value::text AS \"value\" FROM mqtt_data WHERE $__timeFilter(time) ORDER BY time",
            "refId": "A",
            "datasource": {
              "type": "postgres",
              "uid": "timescaledb"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "auto",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            },
            "unit": "short"
          },
          "overrides": []
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "single",
            "sort": "none"
          }
        }
      },
      {
        "id": 2,
        "title": "Conteggio messaggi per Topic",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "",
            "format": "table",
            "intervalFactor": 1,
            "rawSql": "SELECT topic, COUNT(*) as count FROM mqtt_data WHERE $__timeFilter(time) GROUP BY topic ORDER BY count DESC",
            "refId": "A",
            "datasource": {
              "type": "postgres",
              "uid": "timescaledb"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            },
            "unit": "short"
          },
          "overrides": []
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        },
        "pluginVersion": "8.0.0"
      },
      {
        "id": 3,
        "title": "Ultimi messaggi ricevuti",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "",
            "format": "table",
            "intervalFactor": 1,
            "rawSql": "SELECT time, topic, value, pod_name FROM mqtt_data WHERE $__timeFilter(time) ORDER BY time DESC LIMIT 100",
            "refId": "A",
            "datasource": {
              "type": "postgres",
              "uid": "timescaledb"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "time"
              },
              "properties": [
                {
                  "id": "custom.width",
                  "value": 200
                }
              ]
            }
          ]
        },
        "options": {
          "showHeader": true
        },
        "pluginVersion": "8.0.0"
      }
    ],
    "refresh": "5s",
    "schemaVersion": 27,
    "style": "dark",
    "version": 1
  }
}